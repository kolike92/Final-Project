<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.link.android.SearchFragment"
    android:weightSum="3">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minWidth="300dp"
        android:minHeight="200dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/search"
            android:id="@+id/tvSearch"
            android:layout_weight="1"
            android:gravity="center_vertical|center|center_horizontal"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etSearch"
            android:layout_weight="1"
            android:gravity="fill_horizontal|center_vertical|center" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:rowCount="2"
        android:columnCount="3">

        <CheckBox
            android:text="@string/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkFood"/>

        <CheckBox
            android:text="@string/sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkSports" />

        <CheckBox
            android:text="@string/study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkStudyBreak" />

        <CheckBox
            android:text="@string/movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkMovie" />

        <CheckBox
            android:text="@string/explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkExploring" />

        <CheckBox
            android:text="@string/other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkOther" />
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:text="@string/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnSearch"/>

        <Button
            android:text="@string/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
