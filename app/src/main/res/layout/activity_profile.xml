<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/black_background"
    tools:context="com.example.link.android.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="156dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_below="@+id/tvDate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:id="@+id/imageView"
                android:layout_gravity="center" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Name: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tvNameShow"
                        android:textColor= "@color/cardview_light_background"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor= "@color/cardview_light_background"
                        android:ems="10"
                        android:id="@+id/etName" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Phone: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tvPhoneNumShow"
                        android:textColor= "@color/cardview_light_background"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="141dp"
                        android:textColor= "@color/cardview_light_background"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/etPhoneNum" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Email: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tvEmailShow"
                        android:textColor= "@color/cardview_light_background"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="140dp"
                        android:textColor= "@color/cardview_light_background"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/etEmail" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Birth Date: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tvDoBShow"
                        android:textColor= "@color/cardview_light_background"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="144dp"
                        android:textColor= "@color/cardview_light_background"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/etDoB" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <TextView
                android:text="Likes: 4"
                android:textColor= "@color/cardview_light_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLikes"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <TextView
            android:text="@string/upAct"
            android:textColor= "@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvUpAct"
            android:layout_weight="0.02"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:id="@+id/lvUpAct" />

        <TextView
            android:text="@string/pastAct"
            android:textColor= "@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPstAct"
            android:layout_weight="0.02"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/lvPstAct" />

        <TextView
            android:text="@string/yourAct"
            android:textColor= "@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvYourAct"
            android:layout_weight="0.01"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_weight="0.16"
            android:id="@+id/lvYourAct" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp">

            <Button
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:id="@+id/btnSave" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSpace"
                android:layout_weight="1" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
